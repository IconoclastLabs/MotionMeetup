.content-b.content-d
  %h2 Archive
  .border
  .portfolio
    .row
      .span6.offset1
        Previous Meetups
      .span3.offset1
        Upcoming Meetup
    .row
      .span3.offset1
        - unless @previous_meetups.first.nil?
          = link_to image_tag(@previous_meetups.first.asset.url(:small)), archive_url(@previous_meetups.first), {class: "prettyPhoto[pp_gal]"}
      .span3
        .span3.offset1
        - unless @previous_meetups.second.nil?
          = link_to image_tag(@previous_meetups.second.asset.url(:small)), archive_url(@previous_meetups.second), {class: "prettyPhoto[pp_gal]"}
      .span3.offset1
        - unless @upcoming_meetup.nil?
          = link_to image_tag(@upcoming_meetup.asset.url(:small)), archive_url(@upcoming_meetup), {class: "prettyPhoto[pp_gal]"}

    .row
      .span12
        = link_to "Past Meetup Archives", archives_url