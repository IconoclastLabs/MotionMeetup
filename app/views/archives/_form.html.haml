= form_for(@archive) do |f|
  - if @archive.errors.any?
    #error_explanation
      %h2
        = pluralize(@archive.errors.count, "error")
        prohibited this archive from being saved:
      %ul
        - @archive.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :body
    %br/
    = f.text_area :body
  .field
    = f.label :publish_at
    %br/
    = f.datetime_select :publish_at
  .actions
    = f.submit
