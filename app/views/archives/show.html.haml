%p#notice= notice

.media
  -# Hardcoding the image until I see about why Rails4 and Paperclip are not friends.

  %a.pull-left{href: '#', style: 'padding-right: 3%;'}
    - begin
      = image_tag @archive.asset.url, class: 'media-object img-polaroid'
    - rescue
      = image_tag "archive_photos/week1.png", class: 'media-object img-polaroid'

  .media-body
    %h1.media-heading
      = @archive.title

    .media.archive_body
      :markdown
        #{@archive.body}
%p
  - if @archive.publish_at.nil?
    %b This archive is unpublished.
  - elsif @archive.publish_at > Time.zone.now
    %b
      = "This page's content will be updated after #{@archive.publish_at.stamp('May 15th, 2013')}"
  - else
    %b Published on:
    = @archive.publish_at.stamp('May 15th, 2013')

